/* 卡片视图 */
page {
  background-color: rgba(243, 241, 241, 0.925);
}
.card {
  width: 100%;
  display: flex;
  padding-bottom: 15px;
  margin-bottom: 30px;
  background-color: white;
  border-bottom: 1px solid #edeaf4;
  box-shadow: 1px 4px 10px 2px #edeaf4;
  transition: 0.3s;
}
.card .avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}
.card .name {
  display: flex;
  justify-content: center;
  color: grey;
}
.card .header_right {
  flex: 4;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px 20px 0 20px;
}
.card .header_right .header_item {
  display: flex;
  flex-direction: column;
  height: 60px;
  justify-content: space-around;
}
.card .header_right .header_item .startTime {
  font-weight: bold;
}
.card .header_right .header_item .timeText {
  color: grey;
  font-size: 14px;
}
.card .header_right .header_item .btn {
  width: 150px;
  background-color: #7468be;
  color: white;
  font-size: 14px;
  border-radius: 20px;
  margin-top: 10px;
}
