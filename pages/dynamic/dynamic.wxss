page {
  font-family: Microsoft YaHei;
}

.template {
  width: 94%;
  padding: 3%;
  margin-top: 20rpx;
  border-top: 10rpx solid rgba(1, 1, 1, 0.1);
}

.header {
  width: 100%;
  height: 100rpx;
}

.avatar {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  float: left;
}

.name {
  margin-bottom: 20rpx;
}

.school {
  font-size: 20rpx;
  color: grey;
}
/* 内容相关样式 */
.content {
  width: 100%;
  font-size: 16px;
  line-height: 30px;
  letter-spacing: 2px;
}
/* 画廊样式 */
.gallery {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
/* 画廊中图片样式 */
.photo {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;

}
/* 底部相关样式 */
.bottom {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.comment {
  height: 80rpx;
  width: 50%;
  border-radius: 10rpx;
  float: left;
  display: flex;
  align-items: center;
}

.input {
  height: 40rpx;
  width: 80%;
  font-size: 28rpx;
  font-weight: 550;
  padding-left: 20rpx;
  border-radius: 50rpx;
  border: 1px solid grey;

}

.comment2 {
  padding-left: 5%;
  height: 40rpx;
  line-height: 40rpx;
  width: 20%;
  display: flex;
  align-items: center;
  float: left;
}

.comment_img {
  height: 40rpx;
  width: 40rpx;
  float: left;
}

.C_title {
  font-size: 25rpx;
  color: rgb(12, 11, 11);
  margin-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.support {
  padding-left: 5%;
  height: 40rpx;
  text-align: center;
  width: 20%;
  float: left;
  display: flex;
  align-items: center;
}

.support_img {
  height: 50rpx;
  width: 50rpx;
  float: left;
}

.S_title {
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 30rpx;


}

/* 画廊样式 */
.page-section {
  width: 100%;
  margin-bottom: 60rpx;
}

.page-section-spacing {
  box-sizing: border-box;
  padding: 0;
}

.swiper {
  width: 100%;
  height: 550rpx;
}

.swiper-item {
  display: block;
  height: 550rpx;
}


.gallery_item {
  width: 100%;
  height: 550rpx;
}

.gallery {
  width: 100%;

}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

/* 发布动态样式 */
.post {
  position: fixed;
  bottom: 10rpx;
  right: 10rpx;
}

.add {
  width: 100rpx;
  height: 100rpx;
  opacity: 0.6;
}

/* 发布评论样式 */
.post_comment {
  width: 100%;
  min-height: 80rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: fixed;
  bottom: 20rpx;
  background-color:rgb(248, 248, 248) ;
}

.comments {
  width: 75%;
  font-size: 16px;
  background-color:rgb(248, 248, 248) ;
}

.send {
  width: 20%;
  font-size: 14px;
  position: fixed;
  right:0;
  bottom: 20rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  background-color:rgb(248, 248, 248);
}
/* 评论相关样式 */
.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  z-index: 100;
}


.cf-bg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: transparent;
  z-index: 99;
}

.cf-box {
  padding: 8px 5px;
  display: flex;
  justify-content: center;
}

.t-info textarea {
  background: red;
  padding: 8px 5px;
  height: 30px;
  box-sizing: border-box;
  width: 100%;
  display: block;
}

.cf-content {
  background-color: #f2f2f2;
  padding: 8px 5px;
  font-size: 14px;
  height: 30px;
  max-height: 40px;
  width: 100%;
}

.cf-send {
  width: 50px;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-left: 5px;
  border-radius: 2px;
  text-align: center;
  padding: 0 2px !important;
  font-size: 12px;
  background-color: #e64340;
  color: #fff;
}

.cf-send.touch-active:active {
  background-color: #b03f3e;
}

.emoji {
  background-color: #fff;
  width: 30px;
  height: 30px;
  text-align: center;
  padding-top: 2px;
  box-sizing: border-box;
  font-size: 20px;
}

.emoji-box {
  position: relative;
  height: 200px;
  padding: 5px 0;
  box-sizing: border-box;
  margin-bottom: -200px;
}

.emoji-cell {
  width: 9.09%;
  height: 33px;
  display: inline-block;
}

.emoji-cell image {
  width: 23px;
  height: 23px;
  padding: 5px;
  border-radius: 3px;
}

.emoji-move-in {
  -webkit-animation: emoji-move-in 0.3s forwards;
  animation: emoji-move-in 0.3s forwards;
}

.emoji-move-out {
  -webkit-animation: emoji-move-out 0.3s forwards;
  animation: emoji-move-out 0.3s forwards;
}

.no-emoji-move {
  -webkit-animation: none;
  animation: none;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -200px;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -200px;
  }
}

@-webkit-keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}

@keyframes pd-left-move {
  0% {
    padding-left: 5px;
  }

  100% {
    padding-left: 15px;
  }
}

