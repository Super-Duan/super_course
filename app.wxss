sroll-view,
swiper,
icon,
text,
progress,
button,
checkbox,
form,
label,
picker,
radio,
slider,
switch,
action-sheet,
modal,
toast,
loading,
navigator,
audio,
image,
video,
map,
canvas {
  box-sizing: border-box;
}
page {
  height: 100%;
}

.hide {
  display: none!important;
}

input,
button {
  font: 14px "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", Arial, sans-serif;
}
